	urldate = {2023-07-10},
	journal = {International Transactions in Operational Research},
	author = {Babaei, Golnoosh and Bamdad, Shahrooz},
	month = sep,
	year = {2023},
	keywords = {credit scoring, peer-to-peer lending, portfolio optimization},
	pages = {2359--2373},
}

