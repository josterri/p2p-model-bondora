	urldate = {2023-07-10},
	journal = {Transactions on Emerging Telecommunications Technologies},
	author = {Rodríguez-Gómez, Rafael A. and Maciá-Fernández, Gabriel and Sánchez-Casado, Leovigildo and García-Teodoro, Pedro},
	month = oct,
